<web-app version="4.0" encoding="UTF-8">
    <display-name>Archetype Created Web Application</display-name>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>GlobalServlet</servlet-name>
        <servlet-class>com.campaign.admission.controller.GlobalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GlobalServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.campaign.admission.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>defaultEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>com.campaign.admission.controller.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>PaginationFilter</filter-name>
        <filter-class>com.campaign.admission.controller.filter.PaginationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PaginationFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>


    <error-page>
        <error-code>404</error-code>
        <location>/api/error</location>
    </error-page>

    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>
</web-app>